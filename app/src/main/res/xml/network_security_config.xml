<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system certificate store -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Domain-specific configuration for BechDia -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">bechdia.com</domain>
        <domain includeSubdomains="true">www.bechdia.com</domain>

        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>

    <!-- Debug overrides (remove in production) -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <!-- Add user certificates for debugging if needed -->
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>